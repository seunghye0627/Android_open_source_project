<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thethrillathand">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/sample"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Login" android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".noticeActivity"></activity>
        <activity android:name=".configurationActivity"></activity>
        <activity android:name=".eventActivity"></activity>
        <activity android:name=".SOSActivity"></activity>
        <activity android:name=".DetailActivity"></activity>
        <activity android:name=".SearchActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>